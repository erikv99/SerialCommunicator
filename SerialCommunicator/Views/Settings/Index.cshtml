@using System.IO.Ports
@model SettingsVm

@{
    ViewData["Title"] = "Settings";
}

<div class="bg-zinc-900 text-white min-h-screen flex flex-col items-center justify-center">
    <h1 class="text-3xl font-bold mb-8">Settings</h1>
    <div class="bg-zinc-800 p-4 rounded-lg w-half">
        <form method="post" asp-controller="Settings" asp-action="Save">
            @Html.AntiForgeryToken()

            <div class="flex">
                <div class="mb-4 mr-4">
                    <label for="portName" class="block text-sm font-medium mb-1">Port Name:</label>
                    <input type="text" id="portName" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.PortName" name="PortName">
                </div>

                <div class="mb-4">
                    <label for="baudRate" class="block text-sm font-medium mb-1">Baud Rate:</label>
                    <input type="number" id="baudRate" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.BaudRate" name="BaudRate">
                </div>
            </div>


            <div class="flex">
                <div class="mb-4 mr-4">
                    <label for="stopBits" class="block text-sm font-medium mb-1">Stop Bits:</label>
                    <input type="number" id="stopBits" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.StopBits" name="StopBits">
                </div>
                <div class="mb-4">
                    <label for="dataBits" class="block text-sm font-medium mb-1">Data Bits:</label>
                    <input type="number" id="dataBits" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.DataBits" name="DataBits">
                </div>
            </div>

            <div class="flex">
                <div class="mb-4 mr-4" style="width: 50%">
                    <label for="parity" class="block text-sm font-medium mb-1">Parity:</label>
                    @Html.DropDownListFor(model => model.Settings.Parity, new SelectList(Enum.GetValues(typeof(Parity))), new 
                    { 
                        @class = "bg-zinc-700 text-white p-2 rounded focus:outline-none w-half", 
                        @id = "parity",
                    })
                </div>
                <div class="mb-4" style="width: 50%">
                    <label for="handshake" class="block text-sm font-medium mb-1">Handshake:</label>
                    @Html.DropDownListFor(model => model.Settings.Handshake, new SelectList(Enum.GetValues(typeof(Handshake))), new
                        {
                            @class = "bg-zinc-700 text-white p-2 rounded focus:outline-none w-half",
                            @id = "handshake",
                        })
                </div>
            </div>

            <div class="flex">
                <div class="mb-4 mr-4">
                    <label for="readTimeout" class="block text-sm font-medium mb-1">Read Timeout:</label>
                    <input type="number" id="readTimeout" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.ReadTimeout" name="ReadTimeout">
                </div>
                <div class="mb-4">
                    <label for="writeTimout" class="block text-sm font-medium mb-1">Write Timeout:</label>
                    <input type="number" id="writeTimout" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.WriteTimeout" name="WriteTimeout">
                </div>
            </div>

            <div class="flex">
                <div class="mb-4 mr-4">
                    <label for="writeTimout" class="block text-sm font-medium mb-1">Write Timeout:</label>
                    <input type="number" id="writeTimout" class="bg-zinc-700 text-white p-2 rounded focus:outline-none w-half" value="@Model.Settings.WriteTimeout" name="WriteTimeout">
                </div>
            </div>

            <div class="mb-4">

            </div>

        </form>
    </div>
</div>

